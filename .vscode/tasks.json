{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "DB load sql file",
			"type": "shell",
			"command": "cat ${input:sql-file} | sed 's/${input:sql-old-hostname}/'$OPSI_HOSTNAME'/g'  | mariadb -h localhost -u $MYSQL_USER --password=$MYSQL_PASSWORD $MYSQL_DATABASE",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			  }
		},
		{
			"label": "Restore Backup",
			"type": "shell",
			"command": "sudo opsi-backup restore --force --backends=${input:opsi-backends} --new-server-id=${OPSI_HOSTNAME} ${input:opsi-backup}",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Create .env file",
			"type": "shell",
			"command": "${workspaceFolder}/.devcontainer/devenv.sh",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	],
	"inputs": [
		{
			"id": "opsi-backup",
			"description": "opsi backup file to use.",
			"default": "backend/opsibackups/dev-backup.tar.bz2",
			"type": "promptString"
		},
		{
			"id": "opsi-backends",
			"description": "opsi backend to use.",
			"default": "mysql",
			"type": "promptString"
		},
		{
			"id": "sql-file",
			"description": "sql file to use.",
			"default": "backend/opsibackups/opsiconfd.sql",
			"type": "promptString"
		},
		{
			"id": "sql-old-hostname",
			"description": "hostname of configserver in sql file.",
			"default": "$OPSI_HOSTNAME",
			"type": "promptString"
		}
	]
}