{
	"version": "0.2.0",
	"configurations": [
		{ // opsiconfd
			"name": "opsiconfd",
			"runtimeExecutable": "opsiconfd",
			"runtimeArgs": [
				"--workers=1",
				"--log-level-stderr=5"
			],
			"outputCapture": "std",
			"request": "launch",
			"type": "node",
			"auto": true,
			"cwd": "${workspaceFolder}/opsiweb"
		},
		{ // Webgui
			"name": "webgui",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script",
				"dev"
			],
			"outputCapture": "std",
			"request": "launch",
			"type": "node",
			"skipFiles": [
				"<node_internals>/**"
			],
			"auto": true,
			"cwd": "${workspaceFolder}/opsiweb"
		},
		{ // Webgui-Storybook
			"name": "webgui-storybook",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script",
				"story"
			],
			"outputCapture": "std",
			"request": "launch",
			"type": "node",
			"skipFiles": [
				"<node_internals>/**"
			],
			"auto": true,
            "cwd": "${workspaceFolder}/opsiweb"
		},
    ]
}
// echo "start application at port 8888"
