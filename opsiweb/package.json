{
  "name": "webgui",
  "version": "0.0.7",
  "repository": "https://gitlab.uib.gmbh/uib/opsiweb-ui-components",
  "license": "MIT",
  "description": "uib opsiweb",
  "scripts": {
    "link-lib": "npm link && npm link uib-components",
    "build": "npm i && npm i uib-components/ #&& npm run link-lib",
    "dev": "PORT=8888 NODE_ENV=development NODE_OPTIONS=--inspect nuxt ui/",
    "clean": "rm -rf node_modules; rm -f package-lock.json",
    "buildclean": "npm run clean && npm run build && npm run dev",
    "story": "PORT=3003 NODE_ENV=development NODE_OPTIONS=--inspect nuxt ui/ storybook --ci --quiet --port 3003 -s ./static",
    "prod": "nuxt ui/ generate && npm run start",
    "start": "nuxt ui/ start",
    "generate": "nuxt ui/ generate",
    "lint:ui": "eslint --quiet --ext \".ts,.js,.vue\" --ignore-path ui/.gitignore  ui/",
    "lint:components": "eslint --quiet --ext \".ts,.js,.vue\" --ignore-path uib-components/.gitignore  uib-components/",
    "lint:all": "npm run lint:ui && npm run lint:components",
    "lint": "npm run lint:ui",
    "test": "jest && playwright test test/e2e test/integration",
    "test:unit": "jest --coverage",
    "test:integration": "playwright test -c config/playwright-integration.config.js",
    "test:e2e": "playwright test -c config/playwright-e2e.config.js",
    "test:playwright": "# TODO: command to test both",
    "all": "../.devcontainer/npm_all.sh"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/i18n": "^7.0.3",
    "@types/js-cookie": "^3.0.1",
    "uib-components": "file:uib-components"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@nuxt/types": "^2.13.1",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@playwright/test": "^1.17.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "eslint": "^7.29.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.12.1",
    "nuxt": "^2.15.8"
  }
}
