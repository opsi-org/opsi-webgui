{
	"version": "0.2.0",
	"configurations": [
		{ // (Lib) Uib-components
			"name": "Uib-Components",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script",
				"dev"
			],
			"outputCapture": "std",
			"request": "launch",
			"type": "node",
			"skipFiles": [
				"<node_internals>/**"
			],
			"auto": true,
			"cwd": "${workspaceFolder}/"
		},
		{ // (Lib) Uib-Components-Storybook
			"name": "Uib-Components Storybook",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script",
				"story"
			],
			"outputCapture": "std",
			"request": "launch",
			"type": "node",
			"skipFiles": [
				"<node_internals>/**"
			],
			"auto": true,
            "cwd": "${workspaceFolder}/"
		},
